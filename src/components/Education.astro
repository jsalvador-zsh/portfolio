---
import education from "../config/education.json";
import Calendar from "../icons/Calendar.astro";
---

    <div class="relative border-l border-border/20 dark:border-borderDark m-3">
        {
            education.map((item) => (
                <article class="mb-8 last-of-type:mb-0 ml-6 flex justify-between items-end">
                    <div>
                        <span class="absolute flex items-center justify-center size-5 -left-[10px]">
                            <Calendar size="size-3"/>
                        </span>
                        <header>
                            <p class="text-sm italic mt-1 mb-0">{ item.startDate } - { item.endDate }</p>
                            <h3 class="text-skin-accent font-medium mb-2">
                                {item.title}
                            </h3>
                            <div class="flex items-start md:items-center gap-x-4">
                                <p class="m-0">{item.entity}</p>
                            </div>
                        </header>
                    </div>
                    <div>
                        {item.link && (
                            <a class="inline-flex items-center underline decoration-dashed underline-offset-4 hover:text-skin-accent " href={item.link} target="_blank">
                                Ver <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        )}
                    </div>
                </article>
            ))
        }
    </div>